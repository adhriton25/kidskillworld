datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

// -----------------------------------------------------------------------------
// 0. User (Authentication)
// -----------------------------------------------------------------------------
model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String
  passwordHash  String?
  isSubscribed  Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  resetTokens   PasswordResetToken[]
}

model PasswordResetToken {
  token     String   @id
  userId    String
  expires   DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// -----------------------------------------------------------------------------
// 1. Grade
// -----------------------------------------------------------------------------
model Grade {
  id         Int      @id @default(autoincrement())
  name       String   @unique

  skills     Skill[]

  @@index([name])
}

// -----------------------------------------------------------------------------
// 2. Subject
// -----------------------------------------------------------------------------
model Subject {
  id         Int             @id @default(autoincrement())
  name       String          @unique

  categories SkillCategory[]

  @@index([name])
}

// -----------------------------------------------------------------------------
// 3. Skill Category
// -----------------------------------------------------------------------------
model SkillCategory {
  id        Int      @id @default(autoincrement())
  name      String

  subjectId Int
  subject   Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  
  skills    Skill[]

  @@unique([name, subjectId])
  @@index([subjectId])
}

// -----------------------------------------------------------------------------
// 4. Skill
// -----------------------------------------------------------------------------
model Skill {
  id          Int           @id @default(autoincrement())
  name        String
  description String?

  gradeId     Int
  categoryId  Int

  grade       Grade         @relation(fields: [gradeId], references: [id], onDelete: Cascade)
  category    SkillCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  worksheetLinks WorksheetSkill[]
  skillTemplates SkillTemplate[]

  @@unique([name, gradeId, categoryId])
  @@index([gradeId])
  @@index([categoryId])
}


model QuestionTemplate {
  id          Int      @id @default(autoincrement())
  template    String   @unique  // e.g. "What is {a} + {b}?"
  type        TemplateType
  difficulty  DifficultyLevel
  questionFormat QuestionFormat

  // Many-to-many with Skills
  skills      SkillTemplate[]

  // Many-to-many with DataBank
  dataBanks   TemplateDataBank[]
}

enum TemplateType {
  MATH_NUMERIC
  ENGLISH_VOCAB
  ENGLISH_GRAMMAR
  ENGLISH_READING
  SCIENCE_FACT
  SCIENCE_CLASSIFICATION
}

enum DifficultyLevel {
  EASY
  MEDIUM
  HARD
}

enum QuestionFormat {
  MCQ
  FILL_BLANK
  TRUE_FALSE
  MATCHING
  Drag_Drop
  Sentence_Ordering
}

model DataBank {
  id        Int      @id @default(autoincrement())
  subject   SubjectType
  key       String
  value     Json     // definitions, facts, distractors, passages, etc.

  // Many-to-many with templates
  templates TemplateDataBank[]
}

enum SubjectType {
  MATH
  ENGLISH
  SCIENCE
}
model SkillTemplate {
  id          Int @id @default(autoincrement())
  skillId     Int
  templateId  Int

  skill       Skill            @relation(fields: [skillId], references: [id], onDelete: Cascade)
  template    QuestionTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@unique([skillId, templateId])
}

model TemplateDataBank {
  id          Int @id @default(autoincrement())
  templateId  Int
  dataBankId  Int

  template    QuestionTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  dataBank    DataBank         @relation(fields: [dataBankId], references: [id], onDelete: Cascade)

  @@unique([templateId, dataBankId])
}


// -----------------------------------------------------------------------------
// 5. Worksheet (Many-to-many with Skills)
// -----------------------------------------------------------------------------
model Worksheet {
  id          String        @id @default(cuid())
  title       String
  description String?
  pdfUrl      String
  thumbnail   String?
  isPremium   Boolean       @default(false)
  isArchived  Boolean       @default(false)
  difficulty  String?       // easy, medium, hard
  tags        String[]      // ["addition", "fractions"]
  views       Int           @default(0)
  downloads   Int           @default(0)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  worksheetSkills WorksheetSkill[]

}

// -----------------------------------------------------------------------------
// 6. WorksheetSkill (Join Table)
// -----------------------------------------------------------------------------
model WorksheetSkill {
  id          Int       @id @default(autoincrement())
  worksheetId String
  skillId     Int

  worksheet   Worksheet @relation(fields: [worksheetId], references: [id], onDelete: Cascade)
  skill       Skill     @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@unique([worksheetId, skillId])
  @@index([skillId])
}
